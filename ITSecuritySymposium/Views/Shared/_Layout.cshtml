<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/prettify.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">
        .inline
        {
            display: inline;
        }
        .accordion
        {
            display: none;
        }
    </style>
    @*<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />*@
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    @*<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>*@
    <script src="@Url.Content("~/Scripts/prettify.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.0.js")" type="text/javascript"></script>
    @RenderSection("HeaderContent", false)
    <script>
        $(function () {
            $("#showhide").click(function (e) {
                $(".accordion").toggle();
                e.preventDefault();
            });
        });
    </script>
</head>
<body onload="prettyPrint()">
    <div class="page">
        <header>
            <div id="title">
                <h1>My MVC Application</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("CSRF", "Index", "Csrf")</li>
                    <li>@Html.ActionLink("XSS", "Index", "Xss")</li>
                    <li>@Html.ActionLink("Overbinding", "Index", "Overbinding")</li>
                    <li>@Html.ActionLink("Html5", "Index", "Html5")</li>
                    <li>@Html.ActionLink("Cookie", "Index", "Cookie")</li>
                    <li>@Html.ActionLink("Html Encode", "Index", "HtmlEncode")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
