        }
    });
</script>

@section HeaderContent {
    <link href="@Url.Content("~/Content/Range.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.range.min.js")" type="text/javascript"></script>
}